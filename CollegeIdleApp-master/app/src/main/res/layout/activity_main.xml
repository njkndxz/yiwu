<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:text="易物"
        android:textSize="40sp"
        android:textStyle="italic"
        android:textColor="@color/colorBrown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:background="@color/colorBlue"/>
    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新"
        android:textSize="22sp"
        android:textColor="@color/colorPurple"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ib_personal_center"
        android:layout_alignEnd="@+id/ib_personal_center" />
    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:layout_marginBottom="4dp"/>
    <ImageButton
        android:id="@+id/ib_learning_use"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_student_number"
        android:src="@drawable/icon_learning_use"
        android:scaleType="centerCrop"
        android:background="@color/colorWhite"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp" />
    <ImageButton
        android:id="@+id/ib_electric_product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="110dp"
        android:layout_below="@+id/tv_student_number"
        android:src="@drawable/icon_electric_product"
        android:scaleType="centerCrop"
        android:background="@color/colorWhite"
        android:layout_marginLeft="110dp" />
    <ImageButton
        android:id="@+id/ib_daily_use"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="205dp"
        android:layout_below="@id/tv_student_number"
        android:src="@drawable/icon_daily_use"
        android:scaleType="centerCrop"
        android:background="@color/colorWhite"
        android:layout_marginLeft="205dp" />

    <TextView
        android:id="@+id/tv_learning_use"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="学习用品"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/ib_learning_use"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:id="@+id/tv_electric_product"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="电子用品"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/ib_electric_product"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp" />
    <TextView
        android:id="@+id/tv_daily_use"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="生活用品"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/ib_daily_use"
        android:layout_marginStart="205dp"
        android:layout_marginLeft="205dp" />
    <TextView
        android:id="@+id/tv_sports_good"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="体育用品"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="310dp"
        android:layout_marginLeft="310dp"
        android:layout_below="@+id/ib_sports_good" />
    <ListView
        android:id="@+id/lv_all_commodity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_electric_product"
        android:layout_marginTop="4dp"
        android:layout_above="@+id/view2"/>

    <View android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/view2"
        android:background="@color/colorBlack"
        android:layout_marginTop="70dp"/>
    <ImageButton
        android:id="@+id/ib_home_page"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_home_page"
        android:src="@drawable/icon_home_page"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp" />

    <ImageButton
        android:id="@+id/ib_add_product"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_add_product"
        android:src="@drawable/icon_add_product"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="180dp" />

    <ImageButton
        android:id="@+id/ib_personal_center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_personal_center"
        android:src="@drawable/icon_personal_center"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/tv_sports_good"
        android:layout_alignStart="@+id/tv_sports_good" />
    <TextView
        android:id="@+id/tv_home_page"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text="首页"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp" />
    <TextView
        android:id="@+id/tv_add_product"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="发布闲置"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="165dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="165dp" />
    <TextView
        android:id="@+id/tv_personal_center"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="个人中心"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/tv_refresh"
        android:layout_alignStart="@+id/tv_refresh" />
    <View android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/ib_sports_good"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/icon_sports_good"
        android:scaleType="centerCrop"
        android:background="@color/colorWhite"
        android:layout_alignTop="@+id/ib_daily_use"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View android:id="@+id/view3"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/ib_sports_good"
        android:layout_toStartOf="@+id/ib_sports_good"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <View android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tv_electric_product"
        android:layout_alignStart="@+id/tv_electric_product" />
</RelativeLayout>